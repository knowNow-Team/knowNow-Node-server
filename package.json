    "@types/compression": "^1.7.0",
    "@types/config": "0.0.38",
    "@types/helmet": "^4.0.0",
    "@types/hpp": "^0.2.1",
    "@types/jsonwebtoken": "^8.5.1",
    "@types/winston": "^2.4.4",
    "axios": "^0.21.1",
    "body-parser": "^1.19.0",
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.1",
    "compression": "^1.7.4",
    "config": "^3.3.6",
    "cookie-parser": "~1.4.4",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "debug": "~2.6.9",
    "dotenv": "^8.2.0",
    "envalid": "^7.1.0",
    "errorhandler": "^1.5.1",
    "express": "^4.17.1",
    "express-validator": "^6.9.0",
    "helmet": "^4.4.1",
    "hpp": "^0.2.3",
    "jsonwebtoken": "^8.5.1",
    "mongodb": "^3.6.5",
